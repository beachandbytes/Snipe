{
    "name": "Snipe",
    "version": "0.3.4.2",
    "description": "Quickly find the tab you're looking for without ever leaving your keyboard.",
    "permissions": [
      "tabs", "http://*/*"
    ],
    "icons": {
        "16": "images/Icon-16.png",
        "19": "images/Icon-19.png",
        "48": "images/Icon-48.png"
    },
    "omnibox": { "keyword" : "tabs" },
    "browser_action": {
        "default_icon": "images/icon-19.png",
        "default_title": "Snipe",
        "default_popup": "popup.html"
    },
    "background_page": "background.html",
    "content_scripts": [{
        "matches": ["http://*/*", "https://*/*"],
        "js": ["content.js"],
        "run_at": "document_start"
    }],
    "update_url": "http://reusablebits.com/extensions/Snipe.xml"
}